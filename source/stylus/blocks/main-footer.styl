.main-footer
  min-width 320px
  background-color #092433

.main-footer__wrapper
  max-width 320px
  padding-top 32px
  padding-left 38px
  padding-right 38px
  padding-bottom 32px
  margin 0 auto
  display flex
  flex-direction column
  box-sizing border-box

.main-footer__link
  margin 0 auto
  margin-bottom 32px
  transition opacity 0.3s ease

  &:hover
    opacity .6

@media (min-width: desktop)
  .main-footer__wrapper
    max-width 1168px
    padding 40px 16px
    flex-direction row
    justify-content space-between

  .main-footer__link
    margin 0
