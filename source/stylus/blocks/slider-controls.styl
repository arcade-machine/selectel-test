.slider-controls__previous-next
  width 106px
  display flex
  justify-content space-between
  position absolute
  bottom 24px

.slider-controls__button
  width 48px
  height 48px
  padding 0
  margin 0
  border none
  background-color transparent
  background-image url("../img/controls.svg")
  background-position 50% 50%
  background-repeat no-repeat
  cursor pointer
  &--previous
    transform scaleX(-1)

.slider-controls__dots-list
  display none

@media (min-width: desktop)
  .slider-controls__previous-next
    display none

  .slider-controls__dots-list
    width 56px
    display flex
    justify-content space-between
    position absolute
    bottom 24px
    left 50%

  .slider-controls__dot
    width 8px
    height 8px
    padding 0
    margin 0
    border 1px solid #ffffff
    border-radius 50%
    opacity .6
    background-color transparent
    box-sizing border-box
    cursor pointer
    transition opacity 0.6s

    &--current
      background-color #FFFFFF

    &:hover
      opacity 1
