.main-content
  min-width 320px
  max-width 320px
  padding-left 16px
  padding-right 16px
  padding-top 80px
  padding-bottom 80px
  margin 0 auto
  box-sizing border-box

  & h3
    padding 0
    margin 0
    margin-bottom 32px
    font-family "Montserrat Semibold"
    font-size 32px
    line-height 40px
    text-align center



.main-content__names-list
  display none

@media (min-width: desktop)
  .main-content
    max-width 1168px
    padding-top 120px
    padding-bottom 120px

    & h3
      margin-bottom 48px
      font-size 40px

  .main-content__names-list
    padding 16px
    margin 0
    font-family "Roboto Regular", sans-serif, Arial
    font-size 16px
    opacity .8
    color #000000
    display flex
    box-sizing border-box

  .main-content__names-item
    &--cpu
      width 16%
      margin-right 89px

    &--hdd
      width 10%
      margin-right 86px

    &--ram
      width 6%
      margin-right 131px

    &--price
      width 22%
