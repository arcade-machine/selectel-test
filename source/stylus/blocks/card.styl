.card
  padding 24px
  border 2px solid rgba(0, 0, 0, 0.8)
  border-radius 8px

.card__item
  margin-bottom 16px

.card__item p:first-child
  padding 0
  margin 0
  font-family "Roboto Regular", sans-serif, Arial
  font-size 16px
  opacity .8
  color #000000

.card__item p:nth-child(2)
  padding 0
  margin 0
  font-family "Roboto Regular", sans-serif, Arial
  font-size 18px
  color #000000